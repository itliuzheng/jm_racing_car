.rc_reserve{
  display: flex;
  margin-top: 40rpx;
}
.rc_reserve .rc_reserve_section{
  height:242rpx;
  background: #fff;
  flex:1;
  margin-right: 11rpx;
}
.rc_reserve .rc_reserve_section:last-child{
  margin-right: 0;
}

.rc_news .news-title{
  margin: 40rpx 0;
}
.rc_news .news-title .title{
  font-size: 18pt;
  font-weight: bold;
  line-height: 1;
}

.rc_news .news-title .more{

}

.rc_news .news-list-box .news-list{
  min-height: 474rpx;
  background: #fff;
  margin-bottom: 26rpx;
  padding: 38rpx 35rpx;
}
.news-list .new-banner{
  width: 100%;
  height: 270rpx;
  background: #ccc;
  margin-bottom: 30rpx;
}
.news-list .new-title{
  display: block;
  font-size: 14pt;
  color: #000;
  margin-bottom: 5rpx;
}
.news-list .new-desc{
  display: block;
  font-size: 11pt;
  color: #929292;
  line-height: 1.2;
}


