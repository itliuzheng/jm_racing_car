/* pages/home/index.wxss */
.home{
  /* background: #fff; */
  min-height:1000rpx;
  height: 100%;
  background-image: linear-gradient(180deg, #fff 5%,#f1f0f5 95%);
  padding: 30rpx 28rpx;
}

.rc_swiper swiper{
  height: 258rpx;
}
.swiper-item{
  width: 100%;
  height: 258rpx;
}
.swiper-item image{
  height: 100%;
  width: 100%;
  display: block;
}

.rc_reserve{
  display: flex;
  margin-top: 40rpx;
}
.rc_reserve .rc_reserve_section{
  height:242rpx;
  background: #fff;
  flex:1;
  margin-right: 11rpx;
}
.rc_reserve_section image{
  width: 336rpx;
  height: 241rpx;
  display: block;
}
.rc_reserve .rc_reserve_section:last-child{
  margin-right: 0;
}

.rc_news .news-title{
  margin: 50rpx 0 28rpx;
}
.rc_news .news-title .title{
  font-size: 36rpx;
  font-weight: bold;
  line-height: 36rpx;
  position: relative;
  padding-left: 50rpx;
}
.news-title .title:before{
  content:'';
  width: 46rpx;
  height: 31rpx;
  position: absolute;
  left: 0;
  top:3rpx;
  background: url("data:image/png;base64,") no-repeat;
  background-size: 100%;
}

.rc_news .news-title .more{
  width: 91rpx;
  height: 20rpx;
  margin-top: 18rpx;
}
.more image{
  width: 100%;
  height: 100%;
  vertical-align: top;
}

.rc_news .news-list-box .news-list{
  min-height: 474rpx;
  background: #fff;
  margin-bottom: 26rpx;
  padding: 38rpx 35rpx;
}
.news-list .new-banner{
  width: 100%;
  height: 270rpx;
  margin-bottom: 30rpx;
}
.new-banner image{
  height: 100%;
  width: 100%;
  display: block;
}
.news-list .new-title{
  display: block;
  font-size: 32rpx;
  color: #000;
  margin-bottom: 5rpx;
  font-weight: 500;
}
.news-list .new-desc{
  display: block;
  font-size: 22rpx;
  color: #a0a0a0;
  line-height: 25rpx;
}


