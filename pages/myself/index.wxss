/**index.wxss**/
page{
  height: 100%;
  background: #fafafa;
  padding-top: 25rpx;
}

.card{
  position: relative;
}
.card_box{
  position: absolute;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
  text-align: center;
  color: #fff;
}
.avatar{
  width: 100rpx;
  height: 100rpx;
  background: #fff;
  border-radius: 50%;
  margin: 52rpx auto 0;
}
.card_box .company,.name{
  font-size:26rpx;
  font-weight:500;
  color:rgba(255,255,255,1);
  line-height:1;
  margin-top: 25rpx;
}
.card .bj{
  display: block;
  width: 697rpx;
  height: 303rpx;
  margin: 0 auto 35rpx;
}

.my-info{
  padding: 27rpx;
}
.info-list{
  background: #fff;
  padding: 0 40rpx;
}
.list-cell{
  height: 96rpx;
  line-height: 96rpx;
  overflow-y: hidden;
  border-radius: 10rpx;
  position: relative;
  border-bottom: 1rpx solid #E6E6E6;
}
.list-cell-no-border{
  border-bottom: 0 none;
}
.list-cell.list-cell-link:before{
  content: "";
  position: absolute;
  right: 0;
  top: 0;
  width: 11rpx;
  height: 100%;
  background: url("data:image/png;base64,") no-repeat center;
  background-size: 100% 19rpx;
}
.list-cell .list-icon{
  width: 24rpx;
  height: 30rpx; 
  margin-top: 34rpx;
  margin-right: 18rpx;
}
.list-cell text{
  font-size: 30rpx;
  color: #333;
}